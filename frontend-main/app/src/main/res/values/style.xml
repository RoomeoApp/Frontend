<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyDialog" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
        <item name="colorSurface">@color/white</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="Logo">
        <item name="fontFamily">@font/glass_antiqua_regular</item>
    </style>

    <style name="InputField">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:layout_width">@dimen/input_width</item>

    </style>

    <style name="InputField.Registration">
        <item name="android:textSize">@dimen/registration_input</item>
    </style>
    <style name="InputField.Login">
        <item name="android:textSize">@dimen/small_text</item>
    </style>
    <style name="ProfileIcon">
        <item name="android:layout_width">@dimen/profile_icon</item>
        <item name="android:layout_height">@dimen/profile_icon</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="ProfileText">
        <item name="android:textColor"> @color/black</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:alpha">0.6</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:drawableBottom">@drawable/black_underline</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_width">250dp</item>


    </style>
    <style name="ProfileData">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_marginTop">20dp</item>

    </style>

    <style name="SearchBarText">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:alpha">0.6</item>
    </style>
    <style name="SearchBarIcon">

        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:layout_marginStart">40dp</item>
    </style>

    <style name="Button" >
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="SearchBarInput">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:background">@drawable/green_border_thicker</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>